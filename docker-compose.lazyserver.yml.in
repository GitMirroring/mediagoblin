
version: '3'

services:
  lazyserver:
    image: mediagoblin/mediagoblin:@PACKAGE_VERSION@
    ports:
      - "6543:6543"
    healthcheck:
      test: [ "CMD", "curl", "-f", "http://localhost:6543" ]
      timeout: 30s
      interval: 10s
      retries: 5
    volumes:
      - mediagoblin-data:/srv
    env_file: docker-compose.env

volumes:
  mediagoblin-data:
